
@{
    ViewBag.Title = "AdminSobreNosotros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="col-xs-12 col-sm-8 col-md-9">
    <br>
    <div class="container">
        <br />
        <form action="guardarCambios" method="post">
            <div class="row">
                <div class="col-sm-10">
                    <h1 class="font-italic text-center">Modificar Paginas</h1><br />
                    <div class="form-group">
                        <label for="comment">Home</label>
                        <textarea class="form-control" rows="5" name="descripcion" id="descripcion" accept="image/png, .jpeg, .jpg, image/gif">@ViewData["descripcion"]</textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="images-container container">
                                <div class="container-enlarge">
                                    <img src="~/img/1.jpeg">
                                    <span><img src="~/img/1.jpeg"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <br /><br /><br />
                                <label for="comment">Subir imagen nueva.</label>
                                <input type="file" class="form-control-file" name="imagen" id="imagen">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <br /><br /><br /><br /><br /><br /><br /><br />
                                <input type="text" name="id" id="id" style="visibility:hidden" value="@ViewData["id"]">
                                <button type="submit" class="btn btn-success">Aceptar</button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</article>

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Advertencia</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                ¿Desea salir sin guardar cambios?
            </div>

            <!-- Modal footer -->
            <form action="CancelarCambios" method="post">
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Si</button>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">No</button>
                </div>
            </form>
        </div>
    </div>
</div>
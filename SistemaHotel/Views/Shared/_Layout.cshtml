<!DOCTYPE html>
<html>
<head>
    <title>SunSet Hotel System</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/ico.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/javascript")
</head>
<body>
    <header>
        <div class="container">
            <section class="row">
                <section class="col-xs-12 col-sm-2 col-md-2">
                    <img src="~/img/logo.png" class="rounded img-fluid" alt="Sunset Hotel logo">
                    <div class="clearfix"> </div>
                </section>

                <section class="col-xs-12 col-sm-10 col-md-10">
                    <h1 class="font-weight-light"><br>SunSet <small class="font-italic"> Hotel</small> </h1>
                </section>
            </section>


            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <a class="navbar-brand" href="#"><img src="~/img/home.png" alt="Logo home" style="width:40px;"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                            @Html.ActionLink("Inicio", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                       
                            @Html.ActionLink("Sobre Nosotros", "SobreNosotros", "SobreNosotros", routeValues: null, htmlAttributes: new { @class = "nav-link" })
         
                     
                            @Html.ActionLink("Facilidades", "Facilidades", "Facilidades", routeValues: null, htmlAttributes: new { @class = "nav-link" })
               
                    
                            @Html.ActionLink("¿Cómo llegar?", "ComoLlegar", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                  
              
                            @Html.ActionLink("Tarifas", "Tarifas", "Tarifas", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                   
                     
                            @Html.ActionLink("Reservas en Línea", "Reserva", "Reserva", routeValues: null, htmlAttributes: new { @class = "nav-link" })
      
                 
                            @Html.ActionLink("Contáctenos", "Contacto", "Contacto", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </div>
                </div>
            </nav>
        </div>

    </header>

    <div class="container">
        <section class="main row">
            <aside class="col-xs-12 col-sm-4 col-md-3">
                <br>
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                        <li data-target="#demo" data-slide-to="3"></li>
                        <li data-target="#demo" data-slide-to="4"></li>
                        <li data-target="#demo" data-slide-to="5"></li>
                        <li data-target="#demo" data-slide-to="6"></li>
                        <li data-target="#demo" data-slide-to="7"></li>
                        <li data-target="#demo" data-slide-to="8"></li>
                        <li data-target="#demo" data-slide-to="9"></li>
                        <li data-target="#demo" data-slide-to="10"></li>
                    </ul>

                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/p1.png" alt="Los Angeles">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p2.png" alt="Chicago">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p3.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p4.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p5.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p6.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p8.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p9.png" alt="New York">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/p10.png" alt="New York">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
                <br>
            </aside>

            @RenderBody()

        </section>
        <br>
    </div>

    <footer>
        <div class="container">
            <div class="text-center">
                <p>©2018, SunSet <span> hotel</span>  <br> Desarrollado por BrumarkCode</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
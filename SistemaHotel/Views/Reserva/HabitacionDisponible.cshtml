@model List<SistemaHotel.Domain.TipoHabitacion>

@{
    ViewBag.Title = "HabitacionDisponible";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listado = new List<SelectListItem>();

    foreach (var item in Model) {
        SelectListItem selectItem = new SelectListItem() {
            Text = item.Descripcion,
            Value = item.Id.ToString()
        };
        listado.Add(selectItem);
    }//Fin del foreach.
}

<article class="col-xs-12 col-sm-8 col-md-9">
    <div class="container">
        <br />
        <div class="row">
            <div class="col-sm-12">
                <h1 class="font-italic text-center">Reserva En L&iacute;nea</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-8 col-sm-8">
                        <form action="HabitacionDisponible" method="post">
                            <div class="form-group">
                                <label for="fechaLlegada">Fecha de llegada:</label>
                                <input type="date" class="form-control" name="fechaLlegada" id="fechaLlegada" />
                            </div>
                            <div class="form-group">
                                <label for="fechaSalida">Fecha de salida:</label>
                                <input type="date" class="form-control" name="fechaSalida" id="fechaSalida" />
                            </div>
                            <div class="form-group">
                                <label for="tipoHabitacion">Tipo de habitacion:</label>
                                @Html.DropDownList("tipoHabitacion", listado, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-success">Aceptar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>